<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:camera="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gegepad.SurfaceVideo.RecodeActivity">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible" />

        <com.gegepad.SurfaceVideo.camera.FocusImageView
            android:id="@+id/focusImageView"
            android:layout_width="75dip"
            android:layout_height="75dip"
            camera:focus_focusing_id="@drawable/focus_focusing"
            camera:focus_success_id="@drawable/focus_focused"
            camera:focus_fail_id="@drawable/focus_focus_failed"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_96"
            android:background="@color/color_2a2a2a"
            android:baselineAligned="false"
            android:layout_gravity="top"
            android:alpha="0.5"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_96"
            android:baselineAligned="false"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:descendantFocusability="afterDescendants"
                android:focusable="true"
                android:gravity="center">
                <com.gegepad.SurfaceVideo.camera.RotateImageView
                    android:id="@+id/btn_flashlight"
                    android:layout_height="64dp"
                    android:layout_width="64dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/camera_btn_flashlight_auto"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/camera_label"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:descendantFocusability="afterDescendants"
                android:focusable="true"
                android:gravity="center">
                <com.gegepad.SurfaceVideo.camera.RotateImageView
                    android:id="@+id/btn_camera_switch"
                    android:layout_height="64dp"
                    android:layout_width="64dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/camera_btn_front"
                    />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/headup"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:alpha="0.5"
            android:background="@color/color_262626"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px_50"
            android:paddingRight="@dimen/px_50"
            >
            <ImageView
                android:id="@+id/iv_exit"
                android:layout_width="@dimen/px_96"
                android:layout_height="@dimen/px_96"
                android:layout_centerVertical="true"
                android:background="@null"
                android:clickable="true"
                android:src="@drawable/camera_btn_exit"
                android:contentDescription="@null"
                />
            <com.gegepad.SurfaceVideo.camera.ShutterButton
                android:id="@+id/shutter_button"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/px_180"
                android:layout_height="@dimen/px_180"
                android:scaleType="center"
                android:clickable="true"
                android:gravity="center"
                android:focusable="true"
                android:background="@drawable/camera_btn_shutter"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="wrap_content">
                <com.gegepad.SurfaceVideo.camera.RotateImageView
                    android:id="@+id/review_thumbnail"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    android:layout_height="52dp"
                    android:layout_width="52dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:background="@drawable/camera_border"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>


</android.support.constraint.ConstraintLayout>